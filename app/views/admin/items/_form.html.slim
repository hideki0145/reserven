- if item.errors.present?
  ul#error_explanation
    - item.errors.full_messages.each do |message|
      li= message

= form_with model: [:admin, item], local: true do |f|
  .form-group
    = f.label :name, '名前'
    = f.text_field :name, class: 'form-control'
  = f.submit '登録する', class: 'btn btn-primary'
